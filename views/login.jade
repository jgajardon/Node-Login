extends layout

block content
 h2.page-header Ingresar al Sistema
 p Por favor ingresa tus datos
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/login')
  .form-group
   label Usuario
   input.form-control(name='username', type='text', placeholder='Ingresa tu usuario')
  .form-group
   label Contraseña
   input.form-control(name='password', type='password', placeholder='Ingresa tu contraseña')
  input.btn.btn-primary(type='submit', name='submit',value='Ingresar')
