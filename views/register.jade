extends layout

block content
 h2.page-header Registro
 p Por favor registrese con el formulario
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/register',enctype='multipart/form-data')
  .form-group
   label Nombre
   input.form-control(name='name', type='text', placeholder='Ingresar nombre')
  .form-group
   label Correo Electronico
   input.form-control(name='email', type='email', placeholder='Ingresar correo')
  .form-group
   label Usuario
   input.form-control(name='username', type='text', placeholder='Ingresar usuario')
  .form-group
   label Contrase単a
   input.form-control(name='password', type='password', placeholder='Ingresar contrase単a')
  .form-group
   label Confirmar Contrase単a
   input.form-control(name='password2', type='password', placeholder='Confirmar contrase単a')
  .form-group
   label Imagen de Perfil
   input.form-control(name='profileimage', type='file')
  input.btn.btn-primary(type='submit', name='submit',value='Register')
